// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions  Session[]
  devices   Device[]
  sentFiles     File[] @relation("FileSender")
  receivedFiles File[] @relation("FileReceiver")
  transfers Transfer[]
  feedback  Feedback[]
  ratings   Rating[]
  auditLogs AuditLog[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Device {
  id        String   @id @default(cuid())
  userId    String
  userAgent String?
  ipAddress String?
  lastLogin DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("devices")
}

model File {
  id          String   @id @default(cuid())
  name        String
  size        Int
  type        String
  senderId    String
  receiverId  String?
  encrypted   Boolean  @default(true)
  createdAt   DateTime @default(now())

  sender   User      @relation("FileSender", fields: [senderId], references: [id])
  receiver User?     @relation("FileReceiver", fields: [receiverId], references: [id])
  transfers Transfer[]

  @@map("files")
}

model Transfer {
  id        String   @id @default(cuid())
  fileId    String
  userId    String
  status    String   @default("pending") // pending, in_progress, completed, failed
  progress  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  file File @relation(fields: [fileId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("transfers")
}

model Feedback {
  id        String   @id @default(cuid())
  userId    String
  message   String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("feedback")
}

model Rating {
  id        String   @id @default(cuid())
  userId    String
  rating    Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("ratings")
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  details   String?
  ipAddress String?
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])

  @@map("audit_logs")
}
